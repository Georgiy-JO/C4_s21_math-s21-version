CC = gcc
CFLAGS = -Wall -Wextra -std=c11 -fprofile-arcs -ftest-coverage
LDFLAGS = -lcheck -lm -lpthread -lrt -lsubunit -lgcov 
SRC = tests.c ../abs_fabs_ceil_floor/s21_abs_fabs_ceil_floor.c ../exp/s21_exp.c
OBJ = $(SRC:.c=.o)
TARGET = tests

all: $(TARGET)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(TARGET): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@ $(LDFLAGS)

test: $(TARGET)
	./$(TARGET)

coverage: test
	gcov -o . $(SRC)

coverage_report: coverage
	gcovr -r . --html --html-details -o coverage_report.html

clean:
	rm -f $(OBJ) $(TARGET) *.gc* *.css *.html

.PHONY: all test coverage coverage_report clean
